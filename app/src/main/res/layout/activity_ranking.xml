<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.yanick.nicolas.eric.memory.RankingActivity">

    <TextView android:id="@+id/rankingTitleTextView"
        android:text="@string/title_activity_ranking"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <TextView android:id="@+id/rank1player"
        android:text="1. -"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:gravity="center"/>

    <TextView android:id="@+id/rank2player"
        android:text="2. -"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:layout_below="@+id/rank1player"/>

    <TextView android:id="@+id/rank3player"
        android:text="3. -"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:layout_below="@+id/rank2player"/>

    <TextView android:id="@+id/rank4player"
        android:text="4. -"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:layout_below="@+id/rank3player"/>

    <TextView android:id="@+id/rank5player"
        android:text="5. -"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:layout_below="@+id/rank4player"/>

</RelativeLayout>
